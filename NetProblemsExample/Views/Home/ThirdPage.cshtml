@model NetProblemsExample.Models.Administrator
@{
    ViewBag.Title = "ThirdPage";
}

<h2>ThirdPage</h2>

@if (!Model.AdminIsDone)
{
<ul>
    <li>
        @using (Html.BeginForm("ThirdPage", "Home", FormMethod.Post))
            {

            <div class="form-group">
                @Html.Label("First Name")
                @Html.TextBoxFor(m => m.UserClass.FirstName, new { @class = "form-control", autofocus = "autofocus" })
            </div>
                <div class="form-group">
                    @Html.Label("Last Name")
                    @Html.TextBoxFor(m => m.UserClass.LastName, new { @class = "form-control", autofocus = "autofocus" })
                </div>
                <div class="form-group">
                    @Html.Label("User Name")
                    @Html.TextBoxFor(m => m.UserClass.UserName, new { @class = "form-control", autofocus = "autofocus" })
                </div>
                <div class="form-group">
                    @Html.Label("Is Admin")
                    @Html.TextBoxFor(m => m.IsAdmin, new { @class = "form-control", autofocus = "autofocus" })
                </div>
                <div class="form-group">
                    @Html.HiddenFor(m => m.AdminIsDone, new { @Value = true })
                </div>
                <br />
                <input type="submit" class="btn btn-primary" name="Submit" />
        }
    </li>
</ul>
}
else
{
<ul>
    <li>
        <label> username: @Model.UserClass.UserName</label><br />
        <label> person first name: @Model.UserClass.FirstName</label><br />
        <Label> person last name: @Model.UserClass.LastName</Label><br/>
        <Label> Is Admin:  @Model.IsAdmin</Label>
        <form action="~/Home/StartPage">
            <button class="btn btn-success">Start page</button>
        </form>
    </li>
</ul>
}